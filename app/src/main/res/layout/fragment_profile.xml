<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/resetpassword_screen_background">

    </LinearLayout>

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/userimage"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/profilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="3dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_below="@id/profileimage"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/profilemobileno"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Name"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_light"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/profilename"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_icon_mobile"
        android:drawableTint="@color/DarkGreen"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profileemail"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Name"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_light"
        android:padding="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/profilemobileno"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_icon_email"
        android:drawableTint="@color/DarkGreen"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profileaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_light"
        android:padding="8dp"
        android:drawableLeft="@drawable/ic_icon_deliveryaddress"
        android:drawableTint="@color/DarkGreen"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/profileemail"
        android:textAlignment="center"/>

</RelativeLayout>