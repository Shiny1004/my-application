<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:layout_margin="6dp"
    android:layout_centerHorizontal="true"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/rlayouthome"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:background="#b2dfdb"
        android:layout_gravity="center_horizontal"
        android:clickable="true">

        <ImageView
            android:id="@+id/homeimgrestaurant"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hometxtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_light"
            android:layout_below="@+id/homeimgrestaurant"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/hometxtrating"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@id/hometxtname"
            android:text="3.4"
            android:drawableTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_icon_star"
            android:fontFamily="@font/ubuntu_light"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>