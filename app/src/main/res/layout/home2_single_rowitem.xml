<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="140dp"
    android:id="@+id/home2rlayout"
    android:layout_margin="6dp"
    android:layout_centerHorizontal="true"
    app:cardPreventCornerOverlap="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="11dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b2dfdb">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewhome2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="9dp"
                android:layout_margin="7dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/colorAccent"
                android:background="@color/colorAccent">

                <ImageView
                    android:id="@+id/homeimg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/restaurant_default"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/favrlayout2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/cardviewhome2">

                <TextView
                    android:id="@+id/home2txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="These xxxxx from xxxxxxxx will melt in your mouth"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ubuntu_light"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/home2txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Order now!"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ubuntu_light"
                    android:layout_below="@id/home2txt1"/>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>