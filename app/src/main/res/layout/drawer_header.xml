<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txtfoodland"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@drawable/resetpassword_screen_background">


    <ImageView
        android:id="@+id/imgdrawerheader"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/userimage"
        android:layout_margin="20dp"
        android:layout_centerVertical="true"/>


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgdrawerheader">


        <TextView
            android:id="@+id/txtnamedrawerheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_there"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/ubuntu_medium" />


        <TextView
            android:id="@+id/txtnodrawerheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtnamedrawerheader"
            android:text="@string/hello_there"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/ubuntu_medium"/>


        <TextView
            android:id="@+id/txtiddrawerheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtnodrawerheader"
            android:text="@string/hello_there"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/ubuntu_medium"/>



    </RelativeLayout>


</RelativeLayout>



